@model SIGEM_BIDSS.Models.tbAccionPersonal
@using SIGEM_BIDSS.Models;
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/template/plugins/datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
<div class="card card-primary card-outline">
    <div class="card-header d-flex p-0 ui-sortable-handle">
        <h3 class="card-title p-3">
            <i class="fa fa-upload mr-1"></i>
            Insertar Acción Personal
        </h3>
        <ul class="nav nav-pills ml-auto p-2">
            <li class="nav-item">
                @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-primary" })
            </li>
        </ul>
    </div>

    @using (Html.BeginForm(null, null, FormMethod.Post, FormMethod.Post, new { id = "frmAnticipoViatico" }))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.Acp_RazonRechazo, new { Value = GeneralFunctions.stringDefault })

        <div class="form-horizontal">
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Acp_JefeInmediato, "Jefe Inmediato", htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-11">
                            @Html.DropDownList("Acp_JefeInmediato", null, "Seleccione Jefe Inmediato", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Acp_JefeInmediato, "", new { @class = "text-danger", id = "JefeInmediato" })
                        </div>
                    </div>


                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Acp_FechaSolicitud, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-11">
                            @Html.EditorFor(model => model.Acp_FechaSolicitud, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.Acp_FechaSolicitud, "", new { @class = "text-danger", id = "GralFechaSolicitud" })
                        </div>
                    </div>
                </div>


                <div class="form-row">

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.tipmo_id, "Tipo Movimiento", htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-11">
                            @Html.DropDownList("tipmo_id", null, "Seleccione Tipo Movimiento", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.tipmo_id, "", new { @class = "text-danger", id = "CodigoMun" })
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Acp_Comentario, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-11">

                            @Html.TextAreaFor(model => model.Acp_Comentario, new { @class = "form-control normalize", @maxlength = "250", @onkeyup = "this.value=this.value.toUpperCase()" })

                            @Html.ValidationMessageFor(model => model.Acp_Comentario, "", new { @class = "text-danger", id = "Cliente" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
                    </div>
                </div>

            </div>


        </div>

    }
</div>



<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Content/template/plugins/datepicker/js/bootstrap-datepicker.min.js"></script>
<script src="~/Scripts/app/ValidacionesGenerales.js"></script>
<script src="~/Scripts/app/General_PCAE.js"></script>
<script src="~/Scripts/app/Solicitud/AccionPersonal.js"></script>