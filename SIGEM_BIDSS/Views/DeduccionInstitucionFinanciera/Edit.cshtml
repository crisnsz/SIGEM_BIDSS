@model SIGEM_BIDSS.Models.tbDeduccionInstitucionFinanciera

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<input type="hidden" id="vSwal" value="@TempData["swalfunction"]" />




<input type="hidden" id="municipios" value="@ViewBag.Empleado" />
<input type="hidden" id="selectedMun" value="@ViewBag.emp_Id" />
<input type="hidden" id="selectedPuesto" value="@ViewBag.insf_Id" />

<style>
    .validation-error {
        color: red;
        font-size: small;
    }

    .validation-summary-errors {
        color: red;
        font-size: small;
    }

    .required:after {
        content: "*";
        font-weight: bold;
        color: red;
    }

    #deif_Comentarios {
        text-transform: capitalize;
    }
</style>







<div class="card card-primary card-outline">
    <div class="card-header d-flex p-0 ui-sortable-handle">
        <h3 class="card-title p-3">
            <i class="fa fa-upload mr-1"></i>
            Editar Deducción Institución Financiera
        </h3>
        <ul class="nav nav-pills ml-auto p-2">
            <li class="nav-item">
                @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-primary" })
            </li>
        </ul>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => Model.deif_IdDeduccionInstFinanciera)
               
                <div class="form-group">
                    @Html.LabelFor(model => model.emp_Id, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-sm-4">
                        @Html.DropDownListFor(model => model.emp_Id, (SelectList)ViewBag.emp_Id, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.emp_Id, "", new { @class = "text-danger", id = "empleado" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.insf_Id, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-sm-4">
                        @Html.DropDownListFor(model => model.insf_Id, (SelectList)ViewBag.insf_Id, new { @class = "form-control" })

                        @Html.ValidationMessageFor(model => model.insf_Id, "", new { @class = "text-danger", id = "insfId" })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.deif_Monto, htmlAttributes: new { @class = "control-label col-sm-2" })
                    <div class="col-sm-4">
                        @Html.EditorFor(model => model.deif_Monto, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.deif_Monto, "", new { @class = "text-danger", id = "Monto" })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.deif_Comentarios, htmlAttributes: new { @class = "control-label col-sm-2" })
                    <div class="col-sm-4">
                        @Html.EditorFor(model => model.deif_Comentarios, new { htmlAttributes = new { @class = "form-control", maxlength = "150" } })
                        @Html.ValidationMessageFor(model => model.deif_Comentarios, "", new { @class = "text-danger", id = "Comentarios" })
                    </div>
                </div>




                <div class="form-group">
                    <div class="col-md-offset-4 col-md-10">
                        <input type="submit" value="Guardar" id="Save" class="btn btn-primary" />
                        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
        </div>
    }
</div>

















<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Content/template/plugins/datepicker/js/bootstrap-datepicker.min.js"></script>




<script src="~/Content/template/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
<script src="~/Content/template/plugins/input-mask/jquery.inputmask.js"></script>
<script src="~/Scripts/app/ValidacionesGenerales.js"></script>
<script src="~/Scripts/app/General_PCAE.js"></script>

<script>
    $("#deif_Monto").keyup(function () {
        $('#Monto').hide();
    });
    $("#deif_Comentarios").keyup(function () {
        $('#Comentarios').hide();
    });
    $('#insf_Id').change(function () {
        $('#insfId').hide();
    });
    $('#emp_Id').change(function () {
        $('#empleado').hide();
    });
    
</script>
