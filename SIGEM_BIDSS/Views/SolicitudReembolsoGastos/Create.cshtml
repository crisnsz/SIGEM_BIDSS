@model SIGEM_BIDSS.Models.tbSolicitudReembolsoGastos

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}






<link href="~/Content/template/plugins/datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
<div class="card card-primary card-outline">
    <div class="card-header d-flex p-0 ui-sortable-handle">
        <h3 class="card-title p-3">
            <i class="fa fa-upload mr-1"></i>
            Insertar Solicitud Reembolso De Gastos
        </h3>
        <ul class="nav nav-pills ml-auto p-2">
            <li class="nav-item">
                @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-primary" })
            </li>
        </ul>
    </div>

    @using (Html.BeginForm(null, null, FormMethod.Post, FormMethod.Post, new { id = "frmAnticipoViatico" }))
    {
        @Html.AntiForgeryToken()


        <input type="hidden" id="custId" name="custId" value="3487">
        <div class="form-horizontal">
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })




                <div class="form-row">


                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Reemga_GralFechaSolicitud, htmlAttributes: new { @class = "control-label   col-md-8" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Reemga_GralFechaSolicitud, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.Reemga_GralFechaSolicitud, "", new { @class = "text-danger", id = "GralFechaSolicitud" })
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Reemga_JefeInmediato, "Jefe Inmediato", htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-12">
                            @Html.DropDownList("Reemga_JefeInmediato", null, "Seleccione Jefe Inmediato", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Reemga_JefeInmediato, "", new { @class = "text-danger", id = "JefeInmediato" })
                        </div>
                    </div>

                </div>

                <div class="form-row">


                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Reemga_Cliente, htmlAttributes: new { @class = "control-label   col-md-8" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Reemga_Cliente, new { htmlAttributes = new { @class = "form-control", @style = "text-transform:uppercase;" } })
                            @Html.ValidationMessageFor(model => model.Reemga_Cliente, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Reemga_PropositoVisita, htmlAttributes: new { @class = "control-label   col-md-8" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Reemga_PropositoVisita, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Reemga_PropositoVisita, "", new { @class = "text-danger" })
                        </div>
                    </div>


                </div>



                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="control-label   col-md-10">Departamento</label>
                        <div class="col-md-12">
                            @Html.DropDownList("dep_codigo", null, "Seleccione Departamento", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Reemga_UsuarioCrea, "", new { @class = "text-danger", id = "UsuarioCrea" })
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.mun_codigo, "Municipio", new { @class = "control-label col-md-10" })
                        <div class="col-md-12">
                            <input type="hidden" id="munCodigo" name="munCodigo" value="@ViewBag.munCodigo" />
                            <select class="form-control" name="mun_codigo" id="mun_codigo">
                                <option>Seleccione Municipio</option>
                            </select>
                            @Html.ValidationMessageFor(model => model.mun_codigo, "", new { @class = "text-danger", id = "CodigoMun" })
                        </div>
                    </div>
                </div>





                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Reemga_FechaViaje, htmlAttributes: new { @class = "control-label   col-md-8" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Reemga_FechaViaje, new { htmlAttributes = new { @class = "form-control",@style = "background-color:white" } })
                            @Html.ValidationMessageFor(model => model.Reemga_FechaViaje, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Reemga_DiasVisita, htmlAttributes: new { @class = "control-label   col-md-8" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Reemga_DiasVisita, new { htmlAttributes = new { @class = "form-control", @OnKeyPress = "return soloNumeros(event)" } })
                            @Html.ValidationMessageFor(model => model.Reemga_DiasVisita, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-row">

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Reemga_Comentario, htmlAttributes: new { @class = "control-label   col-md-8" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Reemga_Comentario, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Reemga_Comentario, "", new { @class = "text-danger" })
                        </div>
                    </div>


                </div>


            </div>




            <div class="form-group col-md-6">
                <div class="col-md-offset-2 col-md-12">
                    <input type="submit" value="Guardar" class="btn btn-primary" id="Guardar"/>
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
                </div>
            </div>




        </div>





    }


</div>
@section Scripts {
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Content/template/plugins/datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="~/Content/template/plugins/datepicker/locales/bootstrap-datepicker.es.min.js"></script>

    <script src="~/Content/template/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script src="~/Content/template/plugins/input-mask/jquery.inputmask.js"></script>

    <script src="~/Scripts/app/Solicitud/SolicitudReembolsoGastos.js"></script>
    <script src="~/Scripts/app/Solicitud/ModalesReembolsoGastos.js"></script>


}
