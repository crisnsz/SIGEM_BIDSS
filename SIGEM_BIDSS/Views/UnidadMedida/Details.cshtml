@model SIGEM_BIDSS.Models.tbUnidadMedida

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-primary card-outline">
    <div class="card-header d-flex p-0 ui-sortable-handle">
        <h3 class="card-title p-3">
            <i class="fa fa-info  mr-1"></i>
            Detalle Unidad Medida
        </h3>
        <ul class="nav nav-pills ml-auto p-2">
            <li class="nav-item">
                @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-primary" })
            </li>
        </ul>
    </div>
    <div class="form-horizontal">
        <div class="card-body">
            <dl class="dl-horizontal">
                <dt>
                    ID
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.uni_Id)
                </dd>
                <dt>
                   Descripción
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.uni_Descripcion)
                </dd>
                <dt>
                    Abreviatura
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.uni_Abreviatura)
                </dd>


            </dl>

        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-4 col-md-10">
            @Html.ActionLink("Editar", "Edit", new { id = Model.uni_Id }, new { @class = "btn btn-primary btn-sm" })

        </div>
    </div>
</div>


